        <Label Content="Actualización del Sistema" Height="28" HorizontalAlignment="Left" Margin="106,73,0,0" Name="lblTitle2" VerticalAlignment="Top" Width="303" Foreground="White" FontWeight="Bold" FontSize="14" />
        <Image Height="49" HorizontalAlignment="Left" Margin="24,26,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="54" Source="/NMTUpdater;component/nmt.ico" />
        <Label Content="Progreso de la actualización :" Height="28" HorizontalAlignment="Left" Margin="24,147,0,0" Name="label1" VerticalAlignment="Top" Foreground="White" />
