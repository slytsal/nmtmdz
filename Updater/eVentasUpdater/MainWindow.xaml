        <TextBox Height="336"  HorizontalAlignment="Left" Margin="24,181,0,0" Name="txtStatus" VerticalAlignment="Top" Width="634" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
