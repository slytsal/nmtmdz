                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF95955B" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                    <GradientStop Color="#7BBBE57B" Offset="0.359" />
                    <GradientStop Color="#FF71835B" Offset="1" />
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0" />
                <GradientStop Color="#C5FFFFFF" Offset="1" />
            </LinearGradientBrush>
        </Grid.OpacityMask>
    </Grid>
</Window>
