        <Label Content="e-Territory WS" Height="42" HorizontalAlignment="Left" Margin="114,33,0,0" Name="label2" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" FontFamily="Tahoma" Background="{x:Null}" FontStretch="Normal">
