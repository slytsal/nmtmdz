<Controls:GlassWindow 
       x:Class="FluidKit.NMT.GlassWindow.UpdateGlassWindow" 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
       xmlns:Controls="clr-namespace:FluidKit.Controls;assembly=FluidKit" 
       Title="Actualización" 
       Height="615" Width="700"
       Icon="Media/Imagenes/AppIcon.png"
    >
    <Grid >
        <Grid Opacity="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#5F000000" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                    <GradientStop Color="#773C4141" Offset="0.257" />
                    <GradientStop Color="#B7A3B5B5" Offset="0.665" />
                </LinearGradientBrush>
            </Grid.Background>
            <ProgressBar Height="28" HorizontalAlignment="Left" Margin="40,213,0,0" Name="pBar" VerticalAlignment="Top" Width="583" />
            <TextBox HorizontalAlignment="Left" Margin="40,247,0,59" Name="tBProceso" Width="583" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Foreground="Black">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF588C9D" Offset="0" />
                        <GradientStop Color="White" Offset="0.222" />
                        <GradientStop Color="#FFD0E8EE" Offset="0.73" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Image Height="96" HorizontalAlignment="Left" Margin="27,31,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="117" Source="/NMT_ESC_UPDT_WPF;component/Media/Imagenes/AppIcon.png" />
            <Label Content="Progreso de la actualización:" Height="28" HorizontalAlignment="Left" Margin="42,185,0,0" Name="label1" VerticalAlignment="Top" Width="169" FontFamily="Calibri" Foreground="White" />
            <Label Content="Fecha última actualización" Height="28" HorizontalAlignment="Left" Margin="162,73,0,0" Name="label12" VerticalAlignment="Top" Width="159" FontFamily="Calibri" FontWeight="Bold" Foreground="White" />
            <Label Content="Versión" Height="26" HorizontalAlignment="Left" Margin="162,91,0,0" Name="label32" VerticalAlignment="Top" FontFamily="Calibri" FontWeight="Bold" Foreground="White" />
            <Label Content="2011-12-12" Height="28" HorizontalAlignment="Left" Margin="327,73,0,0" Name="lblFecha" VerticalAlignment="Top" Width="102" FontFamily="Calibri" Foreground="White" />
            <Label Content="1.0.1" Height="28" HorizontalAlignment="Left" Margin="327,91,0,0" Name="lblVersion" VerticalAlignment="Top" Width="73" FontFamily="Calibri" Foreground="White" />
            <Label Content="Actualización del Sistema " Height="36" HorizontalAlignment="Left" Margin="163,30,0,0" Name="label2" VerticalAlignment="Top" Width="276" FontWeight="Bold" FontFamily="Calibri" Foreground="White" FontSize="18" />
            <Label Content="Se está actualizando. Por favor espere a que el proceso termine." HorizontalAlignment="Left" Margin="85,129,0,408" Name="lblAdv1" Width="557" FontFamily="Calibri" Foreground="White" Visibility="Hidden" />
            <Label Content="No desconecte ni apague el equipo." Height="28" HorizontalAlignment="Left" Margin="249,160,0,0" Name="lblAdv2" VerticalAlignment="Top" Width="222" FontFamily="Calibri" Foreground="Yellow" FontWeight="Bold" Visibility="Hidden" />
            <Label Content="Copiando archivo - " Height="28" HorizontalAlignment="Left" Margin="448,185,0,0" Name="lbCuenta" VerticalAlignment="Top" Width="175" HorizontalContentAlignment="Right" Foreground="White" Visibility="Hidden" FontFamily="Calibri" />
            <Button Content="Cancelar" Height="23" HorizontalAlignment="Right" Margin="0,523,55,0" Name="btnCancelar" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="btnCancelar_Click" />
            <Button Content="Actualizar" Height="23" HorizontalAlignment="Left" Margin="467,523,0,0" Name="btnActualizar" VerticalAlignment="Top" Width="75" Click="btnActualizar_Click" />
            <Button Content="Terminar" Height="23" HorizontalAlignment="Left" Margin="467,523,0,0" Name="btnTerminar" VerticalAlignment="Top" Width="75" Click="btnTerminar_Click" Visibility="Hidden" />
        </Grid>
        
    </Grid>
</Controls:GlassWindow>